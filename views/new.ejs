<%- include ("./partials/header")  %>

<div class="ui text container main segment">
    <div class="ui huge header">New User</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field form-group form-control form-text text-muted">
            <label for="name">Title</label>
            <input type="text" name="blog[title]" placeholder="title" required>
        </div>
        <div class="field">
            <label for="name">Image</label>
            <input type="text" name="blog[image]" placeholder="image url/link" required>
        </div>
        <div class="field">
            <label for="name">Blog content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
    <input class="ui inverted big green button" type="submit">
    </form>
</div>

